<% layout("/layouts/boilerplate") %>

<style>
    .message-card {
        transition: transform 0.2s;
        cursor: pointer;
    }
    .message-card:hover {
        transform: translateX(5px);
    }
    .message-preview {
        color: #6c757d;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    .nav-pills .nav-link.active {
        background-color: #667eea;
    }
    .nav-pills .nav-link {
        color: #495057;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-paper-plane"></i> Sent Messages</h2>
            </div>
        </div>
    </div>

    <ul class="nav nav-pills mb-4">
        <li class="nav-item">
            <a class="nav-link" href="/messages/inbox">Inbox</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/messages/sent">Sent</a>
        </li>
    </ul>

    <% if(messages.length > 0) { %>
        <div class="list-group">
            <% for(let message of messages) { %>
                <a href="/messages/<%= message._id %>" class="list-group-item list-group-item-action message-card">
                    <div class="d-flex w-100 justify-content-between align-items-start">
                        <div class="mb-1">
                            <strong>To: <%= message.recipient.username %></strong>
                        </div>
                        <small class="text-muted"><%= new Date(message.createdAt).toLocaleDateString() %></small>
                    </div>
                    <h6 class="mb-1"><%= message.subject %></h6>
                    <p class="message-preview mb-0"><%= message.body %></p>
                    <% if(message.listing) { %>
                        <small class="text-muted">
                            <i class="fas fa-home"></i> Re: <%= message.listing.title %>
                        </small>
                    <% } %>
                </a>
            <% } %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="fas fa-paper-plane fa-4x text-muted mb-3"></i>
            <h4>No sent messages</h4>
            <p class="text-muted">Messages you send will appear here.</p>
        </div>
    <% } %>
</div>
