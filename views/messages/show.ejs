<% layout("/layouts/boilerplate") %>

<style>
    /* Full Page Layout Styles */
    .page-wrapper {
        max-width: 100%;
        padding: 0;
        margin: 0;
    }
    
    .full-width-container {
        max-width: 100%;
        padding: 2rem 3rem;
        background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
        min-height: calc(100vh - 80px);
    }
    
    /* Hero Header Section */
    .page-header {
        background: linear-gradient(135deg, #003049 0%, #1a5276 50%, #003049 100%);
        padding: 3rem 3rem;
        margin: -2rem -3rem 2rem -3rem;
        border-radius: 0;
        position: relative;
        overflow: hidden;
    }
    
    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="2"/></svg>');
        background-size: 200px 200px;
        opacity: 0.5;
    }
    
    .page-header h1 {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
    }
    
    .page-header p {
        color: rgba(255,255,255,0.85);
        font-size: 1.1rem;
        position: relative;
        z-index: 1;
    }
    
    .header-icon {
        position: absolute;
        right: 3rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 8rem;
        color: rgba(255,255,255,0.1);
    }
    
    /* Back Button */
    .btn-back {
        background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
        border: none;
        border-radius: 12px;
        padding: 0.6rem 1.2rem;
        color: #003049;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-back:hover {
        background: #EAE2B7;
        color: #003049;
        transform: translateX(-3px);
    }
    
    /* Message Container */
    .message-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
        overflow: hidden;
    }
    
    /* Message Header */
    .message-header {
        padding: 2rem;
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }
    
    .message-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #003049;
        margin: 0;
    }
    
    .btn-delete {
        border: 2px solid #dc3545;
        color: #dc3545;
        background: transparent;
        border-radius: 12px;
        padding: 0.5rem 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-delete:hover {
        background: #dc3545;
        color: white;
    }
    
    /* Message Content */
    .message-content {
        padding: 2rem;
    }
    
    .sender-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .sender-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #003049, #006d92);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        font-weight: 600;
    }
    
    .sender-details h4 {
        font-weight: 700;
        color: #003049;
        margin: 0 0 0.3rem 0;
    }
    
    .sender-details .message-meta {
        color: #888;
        font-size: 0.9rem;
        margin: 0;
    }
    
    .message-body {
        background: #f8f9fa;
        border-radius: 16px;
        padding: 1.5rem;
        font-size: 1.05rem;
        line-height: 1.8;
        color: #444;
    }
    
    /* Listing Reference Card */
    .listing-ref-card {
        background: linear-gradient(135deg, #fff9f9, #fff5f5);
        border: 1px solid #ffeaea;
        border-radius: 16px;
        padding: 1.5rem;
        margin-top: 1.5rem;
    }
    
    .listing-ref-card h6 {
        color: #003049;
        font-weight: 600;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .listing-ref-card h6 i {
        color: #D62828;
    }
    
    .listing-ref-content {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .listing-ref-image {
        width: 100px;
        height: 70px;
        object-fit: cover;
        border-radius: 12px;
    }
    
    .listing-ref-info h5 {
        font-weight: 600;
        color: #003049;
        margin: 0 0 0.3rem 0;
    }
    
    .listing-ref-info p {
        color: #666;
        margin: 0;
        font-size: 0.9rem;
    }
    
    .listing-ref-link {
        color: #D62828;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .listing-ref-link:hover {
        color: #F77F00;
    }
    
    /* Reply Form */
    .reply-section {
        padding: 2rem;
        background: #f8f9fa;
        border-top: 1px solid #eee;
    }
    
    .reply-section h5 {
        color: #003049;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .reply-section h5 i {
        color: #D62828;
    }
    
    .form-control {
        border-radius: 12px;
        border: 2px solid #e8e8e8;
        padding: 0.85rem 1.1rem;
        transition: all 0.3s ease;
        background: white;
    }
    
    .form-control:focus {
        border-color: #003049;
        box-shadow: 0 0 0 4px rgba(0, 48, 73, 0.1);
        outline: none;
    }
    
    .btn-send {
        background: linear-gradient(135deg, #D62828 0%, #F77F00 100%);
        border: none;
        border-radius: 12px;
        padding: 0.8rem 2rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
    }
    
    .btn-send:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(214, 40, 40, 0.4);
        color: white;
    }
    
    .btn-send i {
        margin-right: 0.5rem;
    }
    
    /* Animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .message-container {
        animation: fadeInUp 0.5s ease forwards;
    }
    
    /* Responsive */
    @media (max-width: 992px) {
        .full-width-container {
            padding: 1.5rem;
        }
        
        .page-header {
            padding: 2rem 1.5rem;
            margin: -1.5rem -1.5rem 1.5rem -1.5rem;
        }
        
        .page-header h1 {
            font-size: 2rem;
        }
        
        .header-icon {
            display: none;
        }
    }
    
    @media (max-width: 768px) {
        .page-header h1 {
            font-size: 1.5rem;
        }
        
        .message-header {
            flex-direction: column;
            gap: 1rem;
        }
        
        .listing-ref-content {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .listing-ref-image {
            width: 100%;
            height: 120px;
        }
    }
    
    @media (max-width: 576px) {
        .full-width-container {
            padding: 1rem;
        }
        
        .message-content, .reply-section {
            padding: 1.5rem;
        }
    }
</style>

<div class="bg-pattern" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none; z-index: -1; background-image: radial-gradient(circle at 20% 80%, rgba(214, 40, 40, 0.03) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(0, 48, 73, 0.03) 0%, transparent 50%);"></div>

<div class="full-width-container">
    <!-- Hero Header -->
    <div class="page-header">
        <i class="fas fa-envelope-open-text header-icon"></i>
        <h1><i class="fas fa-envelope"></i> Message</h1>
        <p>View and reply to messages</p>
    </div>
    
    <a href="/messages/inbox" class="btn-back mb-4 d-inline-flex">
        <i class="fas fa-arrow-left"></i> Back to Inbox
    </a>

    <div class="message-container">
        <!-- Message Header -->
        <div class="message-header">
            <h2 class="message-title"><%= message.subject %></h2>
            <form action="/messages/<%= message._id %>/delete" method="POST">
                <button type="submit" class="btn-delete" onclick="return confirm('Delete this message?')">
                    <i class="fas fa-trash"></i> Delete
                </button>
            </form>
        </div>
        
        <!-- Message Content -->
        <div class="message-content">
            <div class="sender-info">
                <% if(message.sender.profileImage && message.sender.profileImage.url) { %>
                    <img src="<%= message.sender.profileImage.url %>" style="width: 60px; height: 60px; border-radius: 50%; object-fit: cover;">
                <% } else { %>
                    <div class="sender-avatar">
                        <%= message.sender.username.charAt(0).toUpperCase() %>
                    </div>
                <% } %>
                <div class="sender-details">
                    <h4><%= isSender ? 'To: ' + message.recipient.username : 'From: ' + message.sender.username %></h4>
                    <p class="message-meta">
                        <i class="fas fa-clock"></i>
                        <%= new Date(message.createdAt).toLocaleString('en-IN', { day: 'numeric', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                    </p>
                </div>
            </div>
            
            <div class="message-body">
                <%= message.body %>
            </div>
            
            <% if(message.listing) { %>
                <div class="listing-ref-card">
                    <h6><i class="fas fa-home"></i> Regarding Listing:</h6>
                    <div class="listing-ref-content">
                        <img src="<%= message.listing.image ? message.listing.image.url : 'https://via.placeholder.com/100x70' %>" alt="<%= message.listing.title %>" class="listing-ref-image">
                        <div class="listing-ref-info">
                            <h5><%= message.listing.title %></h5>
                            <p><i class="fas fa-map-marker-alt"></i> <%= message.listing.location %></p>
                            <a href="/listings/<%= message.listing._id %>" class="listing-ref-link">
                                View Listing <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        
        <% if(!isSender) { %>
            <div class="reply-section">
                <h5><i class="fas fa-reply"></i> Reply</h5>
                <form action="/messages/<%= message._id %>/reply" method="POST">
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" name="subject" value="Re: <%= message.subject %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="body" class="form-label">Message</label>
                        <textarea class="form-control" id="body" name="body" rows="5" required placeholder="Write your reply..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-send">
                        <i class="fas fa-paper-plane"></i> Send Reply
                    </button>
                </form>
            </div>
        <% } %>
    </div>
</div>
