<% layout("/layouts/boilerplate") %>

<style>
    .message-container {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
    }
    .message-meta {
        color: #6c757d;
        font-size: 0.9rem;
    }
</style>

<div class="container mt-4">
    <div class="message-container p-4">
        <div class="d-flex justify-content-between align-items-start mb-4">
            <div>
                <a href="/messages/inbox" class="btn btn-outline-secondary btn-sm mb-3">
                    <i class="fas fa-arrow-left"></i> Back to Inbox
                </a>
                <h3><%= message.subject %></h3>
            </div>
            <form action="/messages/<%= message._id %>/delete" method="POST">
                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this message?')">
                    <i class="fas fa-trash"></i>
                </button>
            </form>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <% if(message.sender.profileImage && message.sender.profileImage.url) { %>
                        <img src="<%= message.sender.profileImage.url %>" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover;" class="me-3">
                    <% } else { %>
                        <i class="fas fa-user-circle fa-3x mr-3 text-muted"></i>
                    <% } %>
                    <div>
                        <strong><%= isSender ? 'To: ' + message.recipient.username : 'From: ' + message.sender.username %></strong>
                        <p class="mb-0 message-meta">
                            <%= new Date(message.createdAt).toLocaleString() %>
                        </p>
                    </div>
                </div>
                <hr>
                <p style="white-space: pre-wrap;"><%= message.body %></p>
            </div>
        </div>

        <% if(message.listing) { %>
            <div class="card mb-4">
                <div class="card-body">
                    <h6>Regarding Listing:</h6>
                    <div class="d-flex align-items-center">
                        <img src="<%= message.listing.image.url %>" style="width: 80px; height: 60px; object-fit: cover; border-radius: 4px;" class="me-3">
                        <div>
                            <a href="/listings/<%= message.listing._id %>" class="font-weight-bold"><%= message.listing.title %></a>
                            <p class="mb-0 text-muted"><%= message.listing.location %></p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <% if(!isSender) { %>
            <div class="reply-form">
                <h5>Reply</h5>
                <form action="/messages/<%= message._id %>/reply" method="POST">
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" class="form-control" id="subject" name="subject" value="Re: <%= message.subject %>" required>
                    </div>
                    <div class="form-group">
                        <label for="body">Message</label>
                        <textarea class="form-control" id="body" name="body" rows="4" required placeholder="Write your reply..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Send Reply
                    </button>
                </form>
            </div>
        <% } %>
    </div>
</div>
