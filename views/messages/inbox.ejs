<% layout("/layouts/boilerplate") %>

<style>
    .message-card {
        transition: transform 0.2s;
        cursor: pointer;
    }
    .message-card:hover {
        transform: translateX(5px);
    }
    .unread-badge {
        background: #667eea;
        color: white;
        padding: 2px 8px;
        border-radius: 50%;
        font-size: 0.75rem;
    }
    .message-preview {
        color: #6c757d;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    .nav-pills .nav-link.active {
        background-color: #667eea;
    }
    .nav-pills .nav-link {
        color: #495057;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-envelope"></i> Messages
                    <% if(unreadCount > 0) { %>
                        <span class="unread-badge"><%= unreadCount %></span>
                    <% } %>
                </h2>
            </div>
        </div>
    </div>

    <% if(messages.length > 0) { %>
        <div class="list-group">
            <% for(let message of messages) { %>
                <a href="/messages/<%= message._id %>" class="list-group-item list-group-item-action message-card <%= !message.isRead ? 'bg-light' : '' %>">
                    <div class="d-flex w-100 justify-content-between align-items-start">
                        <div class="mb-1">
                            <% if(message.sender.profileImage && message.sender.profileImage.url) { %>
                                <img src="<%= message.sender.profileImage.url %>" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="mr-2">
                            <% } else { %>
                                <i class="fas fa-user-circle fa-2x mr-2 text-muted"></i>
                            <% } %>
                            <strong class="<%= !message.isRead ? 'text-primary' : '' %>">
                                <%= message.sender.username %>
                            </strong>
                            <% if(!message.isRead) { %>
                                <span class="badge badge-primary">New</span>
                            <% } %>
                        </div>
                        <small class="text-muted"><%= new Date(message.createdAt).toLocaleDateString() %></small>
                    </div>
                    <h6 class="mb-1 <%= !message.isRead ? 'font-weight-bold' : '' %>"><%= message.subject %></h6>
                    <p class="message-preview mb-0"><%= message.body %></p>
                    <% if(message.listing) { %>
                        <small class="text-muted">
                            <i class="fas fa-home"></i> Re: <%= message.listing.title %>
                        </small>
                    <% } %>
                </a>
            <% } %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
            <h4>No messages yet</h4>
            <p class="text-muted">When someone contacts you, you'll see their messages here.</p>
        </div>
    <% } %>
</div>
