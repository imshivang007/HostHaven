<% layout("/layouts/boilerplate") %>

<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter {
        text-align: center;
        margin-right: 1rem;
        margin-top: 1rem;
        opacity: 0.7;
        transition: all 0.3s ease;
        padding: 0.6rem 1.2rem;
        border-radius: 25px;
        background-color: white;
        border: 1px solid #e0e0e0;
    }
    .filter:hover {
        opacity: 1;
        cursor: pointer;
        border-color: #D62828;
        background-color: #EAE2B7;
        transform: translateY(-2px);
    }
    .filter p {
        font-size: 0.8rem;
        margin: 0;
        color: #003049;
    }
    .filter i {
        color: #D62828;
        font-size: 1.1rem;
    }
    .filter a {
        text-decoration: none;
        color: inherit;
    }
    .tax-info {
        display: none;
    }
    .tax-toggle {
        border: 1px solid #003049;
        border-radius: 25px;
        height: 3.2rem;
        padding: 0 1rem;
        margin-left: 1rem;
        display: flex;
        align-items: center;
        background: white;
        transition: all 0.3s ease;
    }
    .tax-toggle:hover {
        background-color: #EAE2B7;
    }
    .tax-toggle .form-check-input:checked {
        background-color: #D62828;
        border-color: #D62828;
    }
    .search-bar {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
    .search-bar input {
        border: 1px solid #e0e0e0;
        border-radius: 20px;
        padding: 8px 15px;
        width: 300px;
        transition: all 0.3s ease;
    }
    .search-bar input:focus {
        border-color: #003049;
        box-shadow: 0 0 0 3px rgba(0, 48, 73, 0.2);
        outline: none;
    }
    .search-bar button {
        border: 1px solid #e0e0e0;
        border-radius: 20px;
        padding: 8px 15px;
        margin-left: 5px;
        background: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .search-bar button:hover {
        background: #D62828;
        border-color: #D62828;
        color: white;
    }
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
        margin-bottom: 2rem;
        gap: 0.5rem;
    }
    .pagination a, .pagination span {
        padding: 0.6rem 1rem;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        text-decoration: none;
        color: #003049;
        transition: all 0.3s ease;
    }
    .pagination a:hover {
        background: #EAE2B7;
        border-color: #D62828;
        color: #D62828;
    }
    .pagination .active {
        background: #D62828;
        color: white;
        border-color: #D62828;
    }
    .active-filter {
        opacity: 1 !important;
        font-weight: bold;
        background-color: #D62828 !important;
        border-color: #D62828 !important;
        color: white;
    }
    .active-filter p {
        color: white !important;
    }
    .active-filter i {
        color: white !important;
    }
    .wishlist-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: white;
        border-radius: 50%;
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        z-index: 10;
        transition: all 0.3s ease;
    }
    .wishlist-badge:hover {
        transform: scale(1.1);
    }
    .wishlist-badge i {
        color: #D62828;
    }
    .card-price {
        color: #222222;
        font-weight: 600;
    }
    .card-location {
        color: #003049;
        font-size: 0.9rem;
    }
    @media screen and (max-width: 768px) {
        #filters {
            justify-content: center;
        }
        .filter {
            margin: 0.5rem;
        }
        .tax-toggle {
            margin: 1rem 0 0 0;
            width: 100%;
            justify-content: center;
        }
    }
</style>

