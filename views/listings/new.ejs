                        <div class="selected-filename" id="mainImageFilename"></div>
                        <img id="mainImagePreview" class="image-preview" alt="Preview">
                    </div>
                </div>

                <!-- Additional Images -->
                <div class="mb-3">
                    <label for="images" class="form-label">Additional Images (Optional)</label>
                    <div class="image-upload-box" id="additionalImageUploadArea">
                        <i class="fas fa-images"></i>
                        <p>Upload additional photos</p>
                        <span class="browse-text">Browse Files</span>
                        <input type="file" name="listing[images]" id="additionalImagesInput" class="form-control" multiple accept="image/*" style="display: none;">
                        <div class="selected-filename" id="additionalImageFilename"></div>
                    </div>
                    <small class="text-muted">You can select multiple images</small>
                </div>
            </div>
        </div>

        <!-- Section 3: Location & Pricing -->
        <div class="form-section">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="section-title-group">
                    <h3>Location & Pricing</h3>
                    <p>Set your location and nightly rate</p>
                </div>
            </div>
            
            <div class="three-column-grid">
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="City, State" class="form-control" required>
                    <div class="invalid-feedback">Location is required</div>
                </div>

                <div class="mb-3">
