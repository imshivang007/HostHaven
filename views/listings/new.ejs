<script>
    // Main Image Upload Functionality
    const mainImageUploadArea = document.getElementById('mainImageUploadArea');
    const mainImageInput = document.getElementById('mainImageInput');
    const mainImageFilename = document.getElementById('mainImageFilename');
    const mainImagePreview = document.getElementById('mainImagePreview');

    if (mainImageUploadArea && mainImageInput) {
        mainImageUploadArea.addEventListener('click', function() {
            mainImageInput.click();
        });

        mainImageInput.addEventListener('change', function() {
            const file = this.files[0];
            if (file) {
                mainImageFilename.textContent = `Selected: ${file.name}`;
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    mainImagePreview.src = e.target.result;
                    mainImagePreview.style.display = 'block';
                };
                reader.readAsDataURL(file);
                
                mainImageUploadArea.style.borderColor = '#D62828';
                mainImageUploadArea.style.background = 'linear-gradient(145deg, #fff5f5, #ffeaea)';
            }
        });
    }

    // Additional Images Upload Functionality
    const additionalImageUploadArea = document.getElementById('additionalImageUploadArea');
    const additionalImagesInput = document.getElementById('additionalImagesInput');
    const additionalImageFilename = document.getElementById('additionalImageFilename');

    if (additionalImageUploadArea && additionalImagesInput) {
        additionalImageUploadArea.addEventListener('click', function() {
            additionalImagesInput.click();
        });

        additionalImagesInput.addEventListener('change', function() {
            const files = this.files;
            if (files.length > 0) {
                const fileNames = Array.from(files).map(f => f.name).join(', ');
                additionalImageFilename.textContent = `Selected: ${fileNames}`;
                
                additionalImageUploadArea.style.borderColor = '#D62828';
                additionalImageUploadArea.style.background = 'linear-gradient(145deg, #fff5f5, #ffeaea)';
            }
        });
    }

    // Prevent form submission when clicking on upload areas
    mainImageUploadArea.addEventListener('click', function(e) {
        e.stopPropagation();
    });
    
    additionalImageUploadArea.addEventListener('click', function(e) {
        e.stopPropagation();
    });
</script>
