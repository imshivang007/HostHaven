<style>
    .footer {
        background-color: #003049;
        padding: 3rem 0 1.5rem;
        margin-top: auto;
    }
    .f-info {
        text-align: left;
        height: auto;
        min-height: auto;
        background-color: transparent;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: flex-start;
        gap: 2rem;
        padding: 0 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    .f-info-logo {
        flex: 1;
        min-width: 200px;
    }
    .f-info-logo h3 {
        color: #FCBF49;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }
    .f-info-logo p {
        color: #EAE2B7;
        font-size: 0.9rem;
        line-height: 1.6;
        opacity: 0.9;
    }
    .f-info-column {
        flex: 1;
        min-width: 150px;
    }
    .f-info-column h4 {
        color: #FCBF49;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }
    .f-info-column a {
        display: block;
        text-decoration: none;
        color: #EAE2B7;
        margin-bottom: 0.5rem;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    .f-info-column a:hover {
        color: #FCBF49;
        transform: translateX(5px);
    }
    .f-info-contact p {
        color: #EAE2B7;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .f-info-contact i {
        color: #FCBF49;
        width: 20px;
    }
    .f-info-newsletter {
        flex: 1.5;
        min-width: 250px;
    }
    .f-info-newsletter h4 {
        color: #FCBF49;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
    }
    .f-info-newsletter p {
        color: #EAE2B7;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        opacity: 0.9;
    }
    .newsletter-form {
        display: flex;
        gap: 0.5rem;
    }
    .newsletter-form input {
        flex: 1;
        padding: 0.6rem 1rem;
        border: none;
        border-radius: 4px;
        background-color: rgba(255,255,255,0.1);
        color: #EAE2B7;
        font-size: 0.9rem;
    }
    .newsletter-form input::placeholder {
        color: rgba(234, 226, 183, 0.6);
    }
    .newsletter-form button {
        padding: 0.6rem 1.2rem;
        background-color: #FCBF49;
        color: #003049;
        border: none;
        border-radius: 4px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .newsletter-form button:hover {
        background-color: #f5a623;
        transform: translateY(-2px);
    }
    .f-info-socials {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: 1rem;
    }
    .f-info-socials a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background-color: rgba(255,255,255,0.1);
        transition: all 0.3s ease;
        text-decoration: none;
    }
    .f-info-socials a:hover {
        background-color: #FCBF49;
        transform: translateY(-3px);
        box-shadow: 0 4px 12px rgba(252, 191, 73, 0.4);
    }
    .f-info-socials i {
        font-size: 1.1rem;
        color: #EAE2B7;
        margin: 0;
        transition: all 0.3s ease;
    }
    .f-info-socials a:hover i {
        color: #003049;
    }
    .f-info-bottom {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(234, 226, 183, 0.2);
    }
    .f-info-brand {
        color: #EAE2B7;
        font-weight: 500;
        font-size: 0.85rem;
    }
    .f-info-payments {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    .f-info-payments span {
        color: #EAE2B7;
        font-size: 0.85rem;
        margin-right: 0.5rem;
    }
    .f-info-payments i {
        font-size: 1.5rem;
        color: #EAE2B7;
        opacity: 0.8;
    }
    .f-info-payments i:hover {
        opacity: 1;
    }
    @media (max-width: 768px) {
        .f-info {
            flex-direction: column;
            text-align: center;
            padding: 0 1rem;
        }
        .f-info-column, .f-info-logo, .f-info-newsletter {
            width: 100%;
        }
        .f-info-contact p {
            justify-content: center;
        }
        .f-info-socials {
            justify-content: center;
        }
        .f-info-bottom {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

