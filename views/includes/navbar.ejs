    }
    .nav-link {
        border-radius: 12px;
        transition: all 0.3s ease;
    }
    .nav-link:hover {
        background-color: #EAE2B7;
    }
    .user-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-color: #D62828;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
    }
    .message-badge {
        position: relative;
        display: inline-block;
    }
    .unread-count-badge {
        position: absolute;
        top: -5px;
        right: -8px;
        background-color: #D62828;
        color: white;
        border-radius: 50%;
        padding: 2px 6px;
        font-size: 0.7rem;
        font-weight: 600;
        min-width: 18px;
        text-align: center;
        border: 2px solid white;
    }
    .unread-count-badge:empty,
    .unread-count-badge[data-count="0"] {
        display: none;
    }
</style>
