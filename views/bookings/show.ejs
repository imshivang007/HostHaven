<% layout("/layouts/boilerplate") %>

<style>
    .booking-details {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
    }
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 1rem;
    }
    .status-confirmed { background: #d4edda; color: #155724; }
    .status-pending { background: #fff3cd; color: #856404; }
    .status-cancelled { background: #f8d7da; color: #721c24; }
    .status-completed { background: #cce5ff; color: #004085; }
    .info-label {
        color: #6c757d;
        font-size: 0.9rem;
    }
    .info-value {
        font-weight: 500;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="booking-details p-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h2><%= booking.listing.title %></h2>
                        <p class="text-muted mb-0">
                            <i class="fas fa-map-marker-alt"></i> 
                            <%= booking.listing.location %>, <%= booking.listing.country %>
                        </p>
                    </div>
                    <span class="status-badge status-<%= booking.status %>"><%= booking.status %></span>
                </div>

                <hr>

                <h4 class="mb-3">Booking Details</h4>
                <div class="row">
                    <div class="col-md-6">
                        <p class="info-label">Check-in</p>
                        <p class="info-value">
                            <i class="fas fa-sign-in-alt"></i> 
                            <%= new Date(booking.checkIn).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="info-label">Check-out</p>
                        <p class="info-value">
                            <i class="fas fa-sign-out-alt"></i> 
                            <%= new Date(booking.checkOut).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <p class="info-label">Number of Guests</p>
                        <p class="info-value"><i class="fas fa-users"></i> <%= booking.guests %> guests</p>
                    </div>
                    <div class="col-md-6">
                        <p class="info-label">Total Price</p>
                        <p class="info-value"><i class="fas fa-rupee-sign"></i> â‚¹<%= booking.totalPrice ? booking.totalPrice.toLocaleString() : 0 %></p>
                    </div>
                </div>

                <hr>

                <h4 class="mb-3">Guest Information</h4>
                <div class="row">
                    <div class="col-md-6">
                        <p class="info-label">Name</p>
                        <p class="info-value"><%= booking.guestName %></p>
                    </div>
                    <div class="col-md-6">
                        <p class="info-label">Email</p>
                        <p class="info-value"><%= booking.guestEmail %></p>
                    </div>
                </div>
                <% if(booking.guestPhone) { %>
                <div class="row">
                    <div class="col-md-6">
                        <p class="info-label">Phone</p>
                        <p class="info-value"><%= booking.guestPhone %></p>
                    </div>
                </div>
                <% } %>
                <% if(booking.specialRequests) { %>
                <div class="row mt-3">
                    <div class="col-12">
                        <p class="info-label">Special Requests</p>
                        <p class="info-value"><%= booking.specialRequests %></p>
                    </div>
                </div>
                <% } %>

                <hr>

                <div class="d-flex justify-content-between align-items-center">
                    <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Back to Listing
                    </a>
                    <% if(isGuest && booking.status !== 'cancelled' && booking.status !== 'completed') { %>
                        <form action="/bookings/<%= booking._id %>/cancel" method="POST">
                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to cancel this booking?')">
                                Cancel Booking
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="booking-details p-4">
                <img src="<%= booking.listing.image.url %>" alt="listing" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px;">
                
                <% if(isOwner) { %>
                    <hr>
                    <h5>Guest Details</h5>
                    <p class="info-label">Name</p>
                    <p class="info-value"><%= booking.user.username %></p>
                    <p class="info-label">Email</p>
                    <p class="info-value"><%= booking.user.email %></p>
                <% } %>

                <hr>
                <p class="info-label">Booking ID</p>
                <p class="info-value text-muted"><small><%= booking._id %></small></p>
                <p class="info-label">Booked On</p>
                <p class="info-value"><%= new Date(booking.createdAt).toLocaleDateString() %></p>
            </div>
        </div>
    </div>
</div>
