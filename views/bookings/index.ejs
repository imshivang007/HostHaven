<% layout("/layouts/boilerplate") %>

<style>
    /* Full Page Layout Styles */
    .page-wrapper {
        max-width: 100%;
        padding: 0;
        margin: 0;
    }
    
    .full-width-container {
        max-width: 100%;
        padding: 2rem 3rem;
        background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
        min-height: calc(100vh - 80px);
    }
    
    /* Hero Header Section */
    .page-header {
        background: linear-gradient(135deg, #003049 0%, #1a5276 50%, #003049 100%);
        padding: 3rem 3rem;
        margin: -2rem -3rem 2rem -3rem;
        border-radius: 0;
        position: relative;
        overflow: hidden;
    }
    
    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="2"/></svg>');
        background-size: 200px 200px;
        opacity: 0.5;
    }
    
    .page-header h1 {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
    }
    
    .page-header p {
        color: rgba(255,255,255,0.85);
        font-size: 1.1rem;
        position: relative;
        z-index: 1;
    }
    
    .header-icon {
        position: absolute;
        right: 3rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 8rem;
        color: rgba(255,255,255,0.1);
    }
    
    /* Tab Navigation */
    .nav-pills {
        background: white;
        padding: 0.5rem;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        display: inline-flex;
        margin-bottom: 2rem;
    }
    
    .nav-pills .nav-link {
        color: #003049;
        font-weight: 600;
        border-radius: 12px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s ease;
    }
    
    .nav-pills .nav-link:hover {
        background: #EAE2B7;
        color: #003049;
    }
    
    .nav-pills .nav-link.active {
        background: linear-gradient(135deg, #D62828 0%, #F77F00 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(214, 40, 40, 0.3);
    }
    
    /* Booking Card */
    .booking-card {
        background: white;
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
        overflow: hidden;
    }
    
    .booking-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.1);
    }
    
    .booking-card .card-body {
        padding: 1.5rem;
    }
    
    .booking-image {
        width: 100%;
        height: 160px;
        object-fit: cover;
        border-radius: 16px;
    }
    
    .listing-title {
        font-weight: 700;
        color: #003049;
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }
    
    .listing-location {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }
    
    .listing-location i {
        color: #D62828;
        margin-right: 5px;
    }
    
    .booking-dates {
        color: #444;
        font-size: 0.9rem;
    }
    
    .booking-dates i {
        color: #F77F00;
        margin-right: 5px;
    }
    
    .booking-price {
        font-size: 1.4rem;
        font-weight: 700;
        color: #003049;
    }
    
    /* Status Badges */
    .status-badge {
        padding: 0.5rem 1.2rem;
        border-radius: 25px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
    }
    
    .status-confirmed { 
        background: linear-gradient(135deg, #d4edda, #c3e6cb);
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    
    .status-pending { 
        background: linear-gradient(135deg, #fff3cd, #ffeeba);
        color: #856404;
        border: 1px solid #ffeeba;
    }
    
    .status-cancelled { 
        background: linear-gradient(135deg, #f8d7da, #f5c6cb);
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    
    .status-completed { 
        background: linear-gradient(135deg, #cce5ff, #b8daff);
        color: #004085;
        border: 1px solid #b8daff;
    }
    
    /* Buttons */
    .btn-view {
        background: linear-gradient(135deg, #D62828 0%, #F77F00 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.7rem 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(214, 40, 40, 0.4);
        color: white;
    }
    
    .btn-cancel {
        border: 2px solid #dc3545;
        color: #dc3545;
        background: transparent;
        border-radius: 12px;
        padding: 0.7rem 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-cancel:hover {
        background: #dc3545;
        color: white;
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 5rem 3rem;
        background: white;
        border-radius: 24px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
    }
    
    .empty-state i {
        font-size: 5rem;
        background: linear-gradient(135deg, #EAE2B7, #FCBF49);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1.5rem;
    }
    
    .empty-state h4 {
        color: #003049;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }
    
    .empty-state p {
        color: #666;
        margin-bottom: 2rem;
    }
    
    .btn-browse {
        background: linear-gradient(135deg, #D62828 0%, #F77F00 100%);
        color: white;
        border: none;
        border-radius: 50px;
        padding: 0.8rem 2.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-browse:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(214, 40, 40, 0.4);
        color: white;
    }
    
    /* Guest Info */
    .guest-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #666;
        font-size: 0.9rem;
    }
    
    .guest-info i {
        color: #F77F00;
    }
    
    /* Animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .booking-card {
        animation: fadeInUp 0.5s ease forwards;
    }
    
    /* Responsive */
    @media (max-width: 992px) {
        .full-width-container {
            padding: 1.5rem;
        }
        
        .page-header {
            padding: 2rem 1.5rem;
            margin: -1.5rem -1.5rem 1.5rem -1.5rem;
        }
        
        .page-header h1 {
            font-size: 2rem;
        }
        
        .header-icon {
            display: none;
        }
    }
    
    @media (max-width: 768px) {
        .page-header h1 {
            font-size: 1.5rem;
        }
        
        .nav-pills {
            display: flex;
            width: 100%;
        }
        
        .nav-pills .nav-link {
            flex: 1;
            text-align: center;
            padding: 0.6rem 1rem;
            font-size: 0.9rem;
        }
    }
    
    @media (max-width: 576px) {
        .full-width-container {
            padding: 1rem;
        }
        
        .empty-state {
            padding: 3rem 1.5rem;
        }
    }
</style>

<div class="bg-pattern" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none; z-index: -1; background-image: radial-gradient(circle at 20% 80%, rgba(214, 40, 40, 0.03) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(0, 48, 73, 0.03) 0%, transparent 50%);"></div>

<div class="full-width-container">
    <!-- Hero Header -->
    <div class="page-header">
        <i class="fas fa-calendar-alt header-icon"></i>
        <h1><i class="fas fa-bookmark"></i> My Bookings</h1>
        <p>Manage your upcoming trips and hosting reservations</p>
    </div>
    
    <!-- Tab Navigation -->
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link <%= type === 'guest' ? 'active' : '' %>" href="/my-bookings">
                <i class="fas fa-user me-2"></i>As Guest
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= type === 'host' ? 'active' : '' %>" href="/host-bookings">
                <i class="fas fa-home me-2"></i>As Host
            </a>
        </li>
    </ul>

    <% if(bookings.length > 0) { %>
        <div class="row">
            <% for(let booking of bookings) { %>
                <div class="col-12">
                    <div class="booking-card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-lg-2 col-md-3 col-sm-4 mb-3 mb-md-0">
                                    <img src="<%= booking.listing.image ? booking.listing.image.url : 'https://via.placeholder.com/300x200' %>" alt="listing" class="booking-image">
                                </div>
                                <div class="col-lg-6 col-md-5 col-sm-8">
                                    <h5 class="listing-title"><%= booking.listing.title %></h5>
                                    <p class="listing-location">
                                        <i class="fas fa-map-marker-alt"></i> <%= booking.listing.location %>, <%= booking.listing.country %>
                                    </p>
                                    <p class="booking-dates">
                                        <i class="fas fa-calendar"></i> 
                                        <%= new Date(booking.checkIn).toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' }) %> - 
                                        <%= new Date(booking.checkOut).toLocaleDateString('en-IN', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                    </p>
                                    <p class="guest-info">
                                        <i class="fas fa-users"></i> <%= booking.guests %> <%= booking.guests === 1 ? 'guest' : 'guests' %>
                                    </p>
                                </div>
                                <div class="col-lg-2 col-md-2 text-center text-md-start mb-3 mb-md-0">
                                    <span class="status-badge status-<%= booking.status %>">
                                        <i class="fas fa-<%= booking.status === 'confirmed' ? 'check-circle' : booking.status === 'pending' ? 'clock' : booking.status === 'cancelled' ? 'times-circle' : 'check-double' %>"></i>
                                        <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                                    </span>
                                    <p class="mt-3 mb-0 booking-price">â‚¹<%= booking.totalPrice ? booking.totalPrice.toLocaleString('en-IN') : 0 %></p>
                                </div>
                                <div class="col-lg-2 col-md-2 text-lg-end">
                                    <a href="/bookings/<%= booking._id %>" class="btn btn-view d-block mb-2">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <% if(type === 'guest' && booking.status !== 'cancelled' && booking.status !== 'completed') { %>
                                        <form action="/bookings/<%= booking._id %>/cancel" method="POST">
                                            <button type="submit" class="btn btn-cancel d-block w-100" onclick="return confirm('Are you sure you want to cancel this booking?')">
                                                <i class="fas fa-times"></i> Cancel
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    <% } else { %>
        <div class="empty-state">
            <i class="fas fa-calendar-times"></i>
            <h4>No bookings found</h4>
            <p>Start exploring listings to make your first booking!</p>
            <a href="/listings" class="btn btn-browse">
                <i class="fas fa-compass"></i> Browse Listings
            </a>
        </div>
    <% } %>
</div>
