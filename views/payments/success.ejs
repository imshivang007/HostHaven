<% layout("/layouts/boilerplate") %>

<style>
    /* Full Page Layout Styles */
    .page-wrapper {
        max-width: 100%;
        padding: 0;
        margin: 0;
    }
    
    .full-width-container {
        max-width: 100%;
        padding: 2rem 3rem;
        background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
        min-height: calc(100vh - 80px);
    }
    
    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, #003049 0%, #1a5276 50%, #003049 100%);
        padding: 3rem 3rem;
        margin: -2rem -3rem 2rem -3rem;
        border-radius: 0;
        position: relative;
        overflow: hidden;
    }
    
    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="2"/></svg>');
        background-size: 200px 200px;
        opacity: 0.5;
    }
    
    .page-header h1 {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
    }
    
    .page-header p {
        color: rgba(255,255,255,0.85);
        font-size: 1.1rem;
        position: relative;
        z-index: 1;
    }
    
    .header-icon {
        position: absolute;
        right: 3rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 8rem;
        color: rgba(255,255,255,0.1);
    }
    
    /* Success Card */
    .success-card {
        background: white;
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
        overflow: hidden;
        padding: 2rem;
        border: 1px solid #eee;
        transition: all 0.3s ease;
    }
    
    .success-card:hover {
        box-shadow: 0 8px 30px rgba(0,0,0,0.1);
        transform: translateY(-2px);
    }
    
    .success-icon-large {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #D62828 0%, #F77F00 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        box-shadow: 0 4px 20px rgba(214, 40, 40, 0.4);
    }
    
    .success-icon-large i {
        font-size: 3rem;
        color: white;
    }
    
    /* Buttons */
    .btn-primary-custom {
        background: linear-gradient(135deg, #D62828, #F77F00) !important;
        border: none !important;
        border-radius: 50px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        color: white !important;
    }
    
    .btn-primary-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(214, 40, 40, 0.4);
        background: linear-gradient(135deg, #F77F00, #D62828) !important;
    }
    
    .btn-outline-custom {
        border: 2px solid #003049 !important;
        border-radius: 50px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        color: #003049 !important;
        background: transparent !important;
    }
    
    .btn-outline-custom:hover {
        background: #003049 !important;
        color: white !important;
        transform: translateY(-2px);
    }
    
    /* Booking Details */
    .booking-details {
        background: linear-gradient(145deg, #fafafa, #f0f0f0);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .booking-details h5 {
        color: #003049;
        margin-bottom: 1rem;
        font-weight: 700;
        display: flex;
        align-items: center;
    }
    
    .booking-details h5 i {
        margin-right: 0.5rem;
        color: #D62828;
    }
    
    .booking-details p {
        margin-bottom: 0.5rem;
        color: #666;
    }
    
    .booking-details strong {
        color: #003049;
    }
    
    /* Background Pattern */
    .bg-pattern {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
        background-image: 
            radial-gradient(circle at 20% 80%, rgba(214, 40, 40, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(0, 48, 73, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 40% 40%, rgba(247, 127, 0, 0.02) 0%, transparent 40%);
    }
    
    /* Animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .success-card {
        animation: fadeInUp 0.5s ease forwards;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
        .full-width-container {
            padding: 1.5rem;
        }
        
        .page-header {
            padding: 2rem 1.5rem;
            margin: -1.5rem -1.5rem 1.5rem -1.5rem;
        }
        
        .page-header h1 {
            font-size: 2rem;
        }
        
        .header-icon {
            display: none;
        }
    }
</style>

<div class="bg-pattern"></div>

<div class="full-width-container">
    <div class="page-header">
        <i class="fas fa-check-circle header-icon"></i>
        <h1><i class="fas fa-check"></i> Payment Successful!</h1>
        <p>Thank you for your booking. Your reservation is confirmed.</p>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="success-card text-center">
                <div class="success-icon-large">
                    <i class="fas fa-check"></i>
                </div>
                
                <h2 style="color: #003049; margin-bottom: 1rem;">Booking Confirmed!</h2>
                
                <p style="color: #666; font-size: 1.1rem; margin-bottom: 2rem;">
                    Your payment has been processed successfully. A confirmation email has been sent to your email address.
                </p>
                
                <% if(booking) { %>
                    <div class="booking-details text-start">
                        <h5><i class="fas fa-calendar-check"></i> Booking Details</h5>
                        <p><strong>Booking ID:</strong> <span class="text-muted"><%= booking._id %></span></p>
                        <p><strong>Property:</strong> <%= booking.listing ? booking.listing.title : 'N/A' %></p>
                        <p><strong>Check-in:</strong> <%= new Date(booking.checkIn).toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        <p><strong>Check-out:</strong> <%= new Date(booking.checkOut).toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        <p style="margin-bottom: 0;"><strong>Total Paid:</strong> <span style="color: #D62828; font-weight: 700; font-size: 1.2rem;">â‚¹<%= booking.totalPrice ? booking.totalPrice.toLocaleString('en-IN') : 0 %></span></p>
                    </div>
                <% } %>
                
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="/my-bookings" class="btn btn-primary-custom">
                        <i class="fas fa-calendar-alt"></i> View My Bookings
                    </a>
                    <a href="/listings" class="btn btn-outline-custom">
                        <i class="fas fa-home"></i> Browse More Listings
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
