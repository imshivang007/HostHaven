<% layout("/layouts/boilerplate") %>

<style>
    .page-wrapper {
        max-width: 100%;
        padding: 0;
        margin: 0;
    }
    
    .full-width-container {
        max-width: 100%;
        padding: 2rem 3rem;
        background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
        min-height: calc(100vh - 80px);
    }
    
    .page-header {
        background: linear-gradient(135deg, #003049 0%, #1a5276 50%, #003049 100%);
        padding: 3rem 3rem;
        margin: -2rem -3rem 2rem -3rem;
        border-radius: 0;
        position: relative;
        overflow: hidden;
    }
    
    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="2"/></svg>');
        background-size: 200px 200px;
        opacity: 0.5;
    }
    
    .page-header h1 {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
        text-shadow: 2px 2px 8px rgba(0, 48, 73, 0.5);
        animation: fadeInDown 0.8s ease forwards;
    }
    
    .page-header p {
        color: rgba(255,255,255,0.85);
        font-size: 1.1rem;
        position: relative;
        z-index: 1;
        text-shadow: 1px 1px 4px rgba(0, 48, 73, 0.3);
        animation: fadeInUp 0.8s ease forwards;
        animation-delay: 0.2s;
        opacity: 0;
    }
    
    .header-icon {
        position: absolute;
        right: 3rem;
        top: 50%;
        transform: translateY(-50%);
        font-size: 8rem;
        color: rgba(255,255,255,0.1);
        animation: iconFloat 4s ease-in-out infinite;
    }
    
    @keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes iconFloat {
        0%, 100% { transform: translateY(-50%) translateX(0); }
        50% { transform: translateY(-60%) translateX(10px); }
    }
    
    .auth-container {
        max-width: 450px;
        margin: 0 auto;
        background: white;
        padding: 2.5rem;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    }
    
    .brand-icon {
        text-align: center;
        margin-bottom: 1.5rem;
    }
    
    .brand-icon i {
        font-size: 3.5rem;
        background: linear-gradient(135deg, #D62828, #F77F00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .auth-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #003049;
        text-align: center;
        margin-bottom: 0.5rem;
    }
    
    .auth-subtitle {
        text-align: center;
        color: #666;
        margin-bottom: 2rem;
    }
    
    .form-label {
        font-weight: 600;
        color: #003049;
        margin-bottom: 0.5rem;
    }
    
    .form-control {
        border-radius: 12px;
        border: 2px solid #e8e8e8;
        padding: 0.85rem 1.1rem;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #003049;
        box-shadow: 0 0 0 4px rgba(0, 48, 73, 0.15);
    }
    
    .submit-btn {
        background: linear-gradient(135deg, #D62828, #F77F00) !important;
        border: none !important;
        border-radius: 12px;
        padding: 0.9rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        width: 100%;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }
    
    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(214, 40, 40, 0.4);
    }
    
    .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        color: #666;
    }
    
    .auth-footer a {
        color: #D62828;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .auth-footer a:hover {
        color: #F77F00;
        text-decoration: underline;
    }
    
    .info-box {
        background: #f8f9fa;
        border-left: 4px solid #003049;
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 0 8px 8px 0;
    }
    
    .info-box p {
        margin: 0;
        color: #666;
        font-size: 0.9rem;
    }
    
    @media (max-width: 576px) {
        .full-width-container {
            padding: 1rem;
        }
        
        .page-header {
            padding: 2rem 1.5rem;
            margin: -1.5rem -1.5rem 1.5rem -1.5rem;
        }
        
        .auth-container {
            padding: 1.5rem;
        }
    }
</style>

<div class="bg-pattern" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none; z-index: -1; background-image: radial-gradient(circle at 20% 80%, rgba(214, 40, 40, 0.03) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(0, 48, 73, 0.03) 0%, transparent 50%);"></div>

<div class="full-width-container">
    <div class="page-header">
        <i class="fas fa-key header-icon"></i>
        <h1><i class="fas fa-key"></i> Forgot Password</h1>
        <p>Enter your email to reset your password</p>
    </div>

    <div class="auth-container">
        <div class="brand-icon">
            <i class="fa-solid fa-compass"></i>
        </div>
        <h1 class="auth-title">Reset Password</h1>
        <p class="auth-subtitle">Enter your email address and we'll send you a link to reset your password</p>
        
        <div class="info-box">
            <p><i class="fas fa-info-circle"></i> If an account exists with that email, you will receive a password reset link.</p>
        </div>
        
        <form action="/forgot-password" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required>
                <div class="invalid-feedback">Please enter a valid email</div>
            </div>
            
            <button class="btn btn-primary submit-btn">
                <i class="fas fa-paper-plane me-2"></i> Send Reset Link
            </button>
        </form>
        
        <div class="auth-footer">
            <p>Remember your password? <a href="/login">Log in</a></p>
        </div>
    </div>
</div>
