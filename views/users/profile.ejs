<% layout("/layouts/boilerplate") %>

<style>
   /* Full Page Layout Styles */
.page-wrapper {
        max-width: 100%;
        padding: 0;
        margin: 0;
    }
    
    .full-width-container {
        max-width: 100%;
        padding: 0;
        background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
    }
    
    /* Profile Header */
    .profile-header {
        background: linear-gradient(135deg, #003049 0%, #1a5276 50%, #003049 100%);
        color: white;
        padding: 4rem 3rem;
        margin-bottom: 0;
        position: relative;
        overflow: hidden;
    }
    
    .profile-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="40" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="2"/></svg>');
        background-size: 200px 200px;
        opacity: 0.5;
        animation: float 20s linear infinite;
    }
    
    .profile-header::after {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 60%);
        animation: shimmer 8s ease-in-out infinite;
    }
    
    @keyframes float {
        0% { background-position: 0 0; }
        100% { background-position: 200px 200px; }
    }
    
    @keyframes shimmer {
        0%, 100% { transform: translate(0, 0) rotate(0deg); }
        25% { transform: translate(5%, 5%) rotate(5deg); }
        50% { transform: translate(-5%, 10%) rotate(-5deg); }
        75% { transform: translate(-10%, -5%) rotate(3deg); }
    }
    
    .profile-img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid white;
        box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        position: relative;
        z-index: 1;
        animation: profileImgIn 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
        animation-delay: 0.2s;
        opacity: 0;
        transform: scale(0.5);
    }
    
    @keyframes profileImgIn {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
    
    .profile-img-placeholder {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 4px solid white;
        box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        position: relative;
        z-index: 1;
        animation: profileImgIn 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
        animation-delay: 0.2s;
        opacity: 0;
        transform: scale(0.5);
    }
    
    .profile-name {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
        animation: slideInLeft 0.6s ease forwards;
        animation-delay: 0.4s;
        opacity: 0;
        transform: translateX(-30px);
    }
    
    @keyframes slideInLeft {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    .profile-email {
        opacity: 0.9;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
        animation: slideInLeft 0.6s ease forwards;
        animation-delay: 0.6s;
        opacity: 0;
        transform: translateX(-30px);
    }
    
    .profile-email i {
        color: #F77F00;
    }
    
    .profile-bio {
        opacity: 0.85;
        font-size: 1rem;
        max-width: 600px;
        position: relative;
        z-index: 1;
        animation: slideInLeft 0.6s ease forwards;
        animation-delay: 0.8s;
        opacity: 0;
        transform: translateX(-30px);
    }
    
    /* Stats */
    .stats-container {
        padding: 2rem 3rem;
        margin-top: -3rem;
        position: relative;
        z-index: 2;
    }
    
    .stat-card {
        background: white;
        border: none;
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        text-align: center;
        transition: all 0.3s ease;
        opacity: 0;
        transform: translateY(30px);
        animation: statCardIn 0.6s ease forwards;
    }
    
    .stat-card:nth-child(1) { animation-delay: 1s; }
    .stat-card:nth-child(2) { animation-delay: 1.15s; }
    .stat-card:nth-child(3) { animation-delay: 1.3s; }
    .stat-card:nth-child(4) { animation-delay: 1.45s; }
    
    @keyframes statCardIn {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.15);
    }
    
    .stat-number {
        font-size: 2.2rem;
        font-weight: bold;
        background: linear-gradient(135deg, #D62828, #F77F00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: countUp 1s ease forwards;
        animation-delay: 1.6s;
        opacity: 0;
    }
    
    @keyframes countUp {
        to {
            opacity: 1;
        }
    }
    
    .stat-label {
        color: #003049;
        font-size: 0.95rem;
        font-weight: 600;
    }
    
    /* Nav Tabs */
    .nav-tabs {
        border: none;
        padding: 0 3rem;
        background: white;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }
    
    .nav-tabs .nav-link {
        color: #003049;
        font-weight: 600;
        border: none;
        border-radius: 12px 12px 0 0;
        padding: 1rem 1.5rem;
        transition: all 0.3s ease;
        position: relative;
    }
    
    .nav-tabs .nav-link:hover {
        background: #EAE2B7;
        color: #D62828;
    }
    
    .nav-tabs .nav-link.active {
        background: linear-gradient(135deg, #D62828, #F77F00);
        color: white;
        box-shadow: 0 4px 15px rgba(214, 40, 40, 0.3);
    }
    
    /* Tab Content */
    .tab-content {
        background: white;
        border: none;
        padding: 2rem 3rem;
        min-height: 400px;
    }
    
    .section-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #003049;
        margin-bottom: 1.5rem;
    }
    
    /* Listing Card */
    .listing-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        background: white;
    }
    
    .listing-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.12);
    }
    
    .listing-card .card-img-top {
        height: 200px;
        object-fit: cover;
    }
    
    .listing-card .card-body {
        padding: 1.5rem;
    }
    
    .listing-card .card-title {
        font-weight: 700;
        color: #003049;
        margin-bottom: 0.5rem;
    }
    
    .listing-card .card-text {
        color: #666;
        font-size: 0.9rem;
    }
    
    .listing-card .price {
        color: #D62828;
        font-weight: 700;
        font-size: 1.2rem;
    }
    
    /* Buttons */
    .btn-view {
        background: linear-gradient(135deg, #D62828, #F77F00);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.5rem 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(214, 40, 40, 0.4);
        color: white;
    }
    
    .btn-edit {
        background: transparent;
        color: #003049;
        border: 2px solid #003049;
        border-radius: 12px;
        padding: 0.5rem 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-edit:hover {
        background: #003049;
        color: white;
    }
    
    .btn-add-listing {
        background: linear-gradient(135deg, #D62828, #F77F00);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.8rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-add-listing:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(214, 40, 40, 0.4);
        color: white;
    }
    
    /* Booking Card */
    .booking-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.06);
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }
    
    .booking-card:hover {
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }
    
    .booking-card .card-body {
        padding: 1.5rem;
    }
    
    .status-badge {
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }
    
    .status-confirmed { background: #d4edda; color: #155724; }
    .status-pending { background: #fff3cd; color: #856404; }
    .status-cancelled { background: #f8d7da; color: #721c24; }
    .status-completed { background: #cce5ff; color: #004085; }
    
    /* Review Card */
    .review-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.06);
        margin-bottom: 1rem;
    }
    
    .review-card .card-body {
        padding: 1.5rem;
    }
    
    /* Edit Profile Section */
    .edit-profile-card {
        background: white;
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        padding: 2rem;
    }
    
    .edit-profile-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid #f0f0f0;
    }
    
    .edit-profile-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #D62828;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .edit-profile-avatar-placeholder {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #D62828, #F77F00);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: 700;
        color: white;
        border: 3px solid white;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .edit-profile-header h5 {
        color: #003049;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }
    
    .edit-profile-header p {
        color: #666;
        margin-bottom: 0;
        font-size: 0.9rem;
    }
    
    .edit-profile-form .form-label {
        font-weight: 600;
        color: #003049;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .edit-profile-form .form-label i {
        color: #D62828;
    }
    
    .edit-profile-form .form-control {
        border-radius: 12px;
        border: 2px solid #e8e8e8;
        padding: 0.85rem 1.1rem;
        transition: all 0.3s ease;
    }
    
    .edit-profile-form .form-control:focus {
        border-color: #D62828;
        box-shadow: 0 0 0 4px rgba(214, 40, 40, 0.15);
    }
    
    .char-count {
        font-size: 0.8rem;
        color: #666;
    }
    
    .char-count.warning {
        color: #F77F00;
    }
    
    .char-count.limit {
        color: #D62828;
    }
    
    .image-upload-container {
        position: relative;
        display: inline-block;
    }
    
    .image-upload-preview {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #e8e8e8;
        transition: all 0.3s ease;
    }
    
    .image-upload-preview:hover {
        border-color: #D62828;
    }
    
    .image-upload-overlay {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #D62828, #F77F00);
        color: white;
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .image-upload-overlay:hover {
        transform: translateX(-50%) translateY(-2px);
        box-shadow: 0 4px 15px rgba(214, 40, 40, 0.4);
    }
    
    .btn-save {
        background: linear-gradient(135deg, #D62828, #F77F00);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.8rem 2.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(214, 40, 40, 0.4);
    }
    
    .btn-cancel {
        background: transparent;
        color: #666;
        border: 2px solid #e8e8e8;
        border-radius: 12px;
        padding: 0.8rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-right: 1rem;
    }
    
    .btn-cancel:hover {
        border-color: #003049;
        color: #003049;
    }
    
    .empty-text {
        color: #666;
        text-align: center;
        padding: 3rem;
    }
    
    /* Animation */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .stat-card, .listing-card {
        animation: fadeInUp 0.5s ease forwards;
    }
    
    /* Responsive */
    @media (max-width: 992px) {
        .profile-header {
            padding: 3rem 1.5rem;
        }
        
        .stats-container {
            padding: 1.5rem;
        }
        
        .tab-content {
            padding: 1.5rem;
        }
        
        .nav-tabs {
            padding: 0 1rem;
            overflow-x: auto;
        }
    }
    
    @media (max-width: 768px) {
        .profile-name {
            font-size: 1.75rem;
        }
        
        .profile-img {
            width: 100px;
            height: 100px;
        }
        
        .nav-tabs .nav-link {
            padding: 0.8rem 1rem;
            font-size: 0.9rem;
        }
    }
</style>

<div class="full-width-container">
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="container-fluid px-4">
            <div class="row align-items-center">
                <div class="col-lg-2 col-md-3 text-center mb-3 mb-md-0">
                    <% if(user.profileImage && user.profileImage.url) { %>
                        <img src="<%= user.profileImage.url %>" alt="Profile" class="profile-img">
                    <% } else { %>
                        <div class="profile-img d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #D62828, #F77F00); font-size: 3rem; font-weight: 700;">
                            <%= user.username.charAt(0).toUpperCase() %>
                        </div>
                    <% } %>
                </div>
                <div class="col-lg-10 col-md-9">
                    <h1 class="profile-name"><%= user.username %></h1>
                    <p class="profile-email"><i class="fas fa-envelope"></i> <%= user.email %></p>
                    <% if(user.bio) { %>
                        <p class="profile-bio"><%= user.bio %></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="stats-container">
        <div class="row g-3">
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number"><%= listings.length %></div>
                    <div class="stat-label">Listings</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number"><%= bookings.length %></div>
                    <div class="stat-label">Bookings</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number"><%= wishlistCount %></div>
                    <div class="stat-label">Wishlist</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number"><%= reviews.length %></div>
                    <div class="stat-label">Reviews</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="profileTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="listings-tab" data-bs-toggle="tab" href="#listings" role="tab">
                <i class="fas fa-home me-2"></i>My Listings
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="bookings-tab" data-bs-toggle="tab" href="#bookings" role="tab">
                <i class="fas fa-calendar-check me-2"></i>My Bookings
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="wishlist-tab" data-bs-toggle="tab" href="#wishlist" role="tab">
                <i class="fas fa-heart me-2"></i>Wishlist
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="reviews-tab" data-bs-toggle="tab" href="#reviews" role="tab">
                <i class="fas fa-star me-2"></i>Reviews
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="edit-tab" data-bs-toggle="tab" href="#edit" role="tab">
                <i class="fas fa-user-edit me-2"></i>Edit Profile
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <!-- My Listings -->
        <div class="tab-pane fade show active" id="listings" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="section-title mb-0">My Listings</h4>
                <a href="/listings/new" class="btn btn-add-listing">
                    <i class="fas fa-plus me-2"></i>Add New Listing
                </a>
            </div>
            <% if(listings.length > 0) { %>
                <div class="row">
                    <% for(let listing of listings) { %>
                        <% if(listing && listing.image) { %>
                        <div class="col-md-4 mb-4">
                            <div class="card listing-card h-100">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing">
                                <div class="card-body">
                                    <h5 class="card-title"><%= listing.title %></h5>
                                    <p class="card-text"><i class="fas fa-map-marker-alt me-1"></i><%= listing.location %></p>
                                    <p class="price">₹<%= listing.price ? listing.price.toLocaleString() : 0 %> / night</p>
                                    <div class="d-flex gap-2">
                                        <a href="/listings/<%= listing._id %>" class="btn btn-view">View</a>
                                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-edit">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    <% } %>
                </div>
            <% } else { %>
                <p class="empty-text">You haven't created any listings yet.</p>
            <% } %>
        </div>

        <!-- My Bookings -->
        <div class="tab-pane fade" id="bookings" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="section-title mb-0">My Bookings</h4>
                <a href="/my-bookings" class="btn btn-view">View All</a>
            </div>
            <% if(bookings && bookings.length > 0) { %>
                <div class="row">
                    <% for(let booking of bookings) { %>
                        <% if(booking && booking.listing && booking.listing.image) { %>
                        <div class="col-md-4 mb-4">
                            <div class="card listing-card h-100">
                                <img src="<%= booking.listing.image.url %>" class="card-img-top" alt="listing">
                                <div class="card-body">
                                    <h5 class="card-title"><%= booking.listing.title %></h5>
                                    <p class="card-text">
                                        <i class="fas fa-calendar me-1"></i>
                                        <%= new Date(booking.checkIn).toLocaleDateString() %> - 
                                        <%= new Date(booking.checkOut).toLocaleDateString() %>
                                    </p>
                                    <p class="price">₹<%= booking.totalPrice ? booking.totalPrice.toLocaleString() : 0 %></p>
                                    <span class="status-badge status-<%= booking.status %> mb-2 d-inline-block"><%= booking.status %></span>
                                    <div class="d-flex gap-2 mt-2">
                                        <a href="/bookings/<%= booking._id %>" class="btn btn-view">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    <% } %>
                </div>
            <% } else { %>
                <p class="empty-text">You haven't made any bookings yet.</p>
            <% } %>
        </div>

        <!-- Wishlist -->
        <div class="tab-pane fade" id="wishlist" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="section-title mb-0">My Wishlist</h4>
                <a href="/my-wishlist" class="btn btn-view">View All</a>
            </div>
            <% if(wishlistItems && wishlistItems.length > 0) { %>
                <div class="row">
                    <% for(let listing of wishlistItems) { %>
                        <% if(listing && listing.image) { %>
                        <div class="col-md-4 mb-4">
                            <div class="card listing-card h-100">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing">
                                <div class="card-body">
                                    <h5 class="card-title"><%= listing.title %></h5>
                                    <p class="card-text"><i class="fas fa-map-marker-alt me-1"></i><%= listing.location %></p>
                                    <p class="price">₹<%= listing.price ? listing.price.toLocaleString() : 0 %> / night</p>
                                    <div class="d-flex gap-2">
                                        <a href="/listings/<%= listing._id %>" class="btn btn-view">View</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    <% } %>
                </div>
            <% } else { %>
                <p class="empty-text">Your wishlist is empty. Start adding listings you like!</p>
            <% } %>
        </div>

        <!-- Reviews -->
        <div class="tab-pane fade" id="reviews" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="section-title mb-0">My Reviews</h4>
                <a href="/listings" class="btn btn-view">Explore Listings</a>
            </div>
            <% if(reviews && reviews.length > 0) { %>
                <div class="row">
                    <% for(let review of reviews) { %>
                        <% if(review && review.listing && review.listing.image) { %>
                        <div class="col-md-4 mb-4">
                            <div class="card listing-card h-100">
                                <img src="<%= review.listing.image.url %>" class="card-img-top" alt="listing">
                                <div class="card-body">
                                    <h5 class="card-title"><%= review.listing.title %></h5>
                                    <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                    <p class="card-text"><%= review.comment %></p>
                                    <small class="text-muted"><%= new Date(review.created).toLocaleDateString() %></small>
                                    <div class="d-flex gap-2 mt-2">
                                        <a href="/listings/<%= review.listing._id %>" class="btn btn-view">View Listing</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    <% } %>
                </div>
            <% } else { %>
                <p class="empty-text">You haven't written any reviews yet.</p>
            <% } %>
        </div>

        <!-- Edit Profile -->
        <div class="tab-pane fade" id="edit" role="tabpanel">
            <div class="edit-profile-card">
                <div class="edit-profile-header">
                    <% if(user.profileImage && user.profileImage.url) { %>
                        <img src="<%= user.profileImage.url %>" alt="Profile" class="edit-profile-avatar">
                    <% } else { %>
                        <div class="edit-profile-avatar-placeholder">
                            <%= user.username.charAt(0).toUpperCase() %>
                        </div>
                    <% } %>
                    <div>
                        <h5><%= user.username %></h5>
                        <p>Edit your profile information below</p>
                    </div>
                </div>
                
                <form action="/profile?_method=PUT" method="POST" enctype="multipart/form-data" class="edit-profile-form">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label for="username" class="form-label">
                                <i class="fas fa-user"></i> Username
                            </label>
                            <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope"></i> Email
                            </label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="bio" class="form-label">
                            <i class="fas fa-align-left"></i> Bio
                        </label>
                        <textarea class="form-control" id="bio" name="bio" rows="4" maxlength="500" placeholder="Tell us about yourself..."><%= user.bio || '' %></textarea>
                        <div class="d-flex justify-content-end mt-2">
                            <small class="char-count"><span id="bioCount">0</span>/500 characters</small>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="profileImage" class="form-label">
                            <i class="fas fa-camera"></i> Profile Image
                        </label>
                        <input type="file" class="form-control" id="profileImage" name="profileImage" accept="image/*">
                        <small class="text-muted d-block mt-2">Recommended size: 400x400px. Max file size: 5MB.</small>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-save">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const triggerTabList = document.querySelectorAll('#profileTabs a');
        triggerTabList.forEach(function(triggerEl) {
            const tabTrigger = new bootstrap.Tab(triggerEl);
            triggerEl.addEventListener('click', function(event) {
                event.preventDefault();
                tabTrigger.show();
            });
        });
    });
</script>
