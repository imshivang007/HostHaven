# MongoDB Atlas Connection String
ATLASDB_URL=mongodb+srv://username:password@cluster.mongodb.net/hosthaven

# Session Secret (must be at least 32 characters with uppercase, lowercase, numbers, and special chars)
SECRET=YourSuperSecretKey123!@#$%^&*()abcdefghij

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe Payment Configuration (REQUIRED for payments to work)
# Get your keys from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Node Environment
NODE_ENV=development
